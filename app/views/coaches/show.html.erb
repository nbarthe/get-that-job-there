<hr class="mt-0">
<div class="container">

    <div class="d-flex justify-content-around align-items-center">
        <img class="avatar-super-large" src="<%= @coach.image_url ? @coach.image_url : 'https://kitt.lewagon.com/placeholder/users/krokrob' %>"/>
      <div class="m-3">
        <h2><%= "#{@coach.first_name} #{@coach.last_name}" %>
          <a class='todo' href=""><i style="color: #666" class="fab fa-xs fa-linkedin ml-2"></i></a>
          <a class='todo' href=""><i style="color: #666" class="fab fa-xs fa-twitter-square"></i></a>
          <a class='todo' href=""><i style="color: #666" class="fab fa-xs fa-instagram"></i></a></h2>

        <p>
          <a style="color: #666" href="mailto:<%= @coach.email %>?Subject=Hello%20<%= @coach.first_name %>!">
           <i class="far fa-1x fa-envelope"></i>
           <%= @coach.email %>
           </a>

        <p>

        <p>

        </p>

        <div>
          <p class="m-0"><i class="fas fa-lg fa-map-marked-alt"></i> City: <%= @coach.city  %></p>
          <p class="m-0"><i class="fas fa-lg fa-award"></i> Specialty: <%= @coach.field %></p>
          <p class="m-0"><i class="far fa-lg fa-calendar-alt"></i> Availability: from <%=   @coach.available_start_at.strftime("%d AM") %> to <%= @coach.available_end_at.strftime("%d PM") %> on business days</p>
        </div>
      </div>

      <div>
          <p class="text-center m-0"> <%= @coach.hourly_rate %> <i class="fas fa-lg fa-euro-sign"></i> / hour</p>
          <%= link_to "Book a class",
        new_coach_appointment_path(@coach),
        class: "btn btn-gradient"%>
      </div>


    </div>
    <p>
    <p class="text-justify">"<%= @coach.description  %>"</p>
    <br>
</div>

<script>
  document.querySelectorAll(".todo").forEach(anchor => {
    anchor.addEventListener("click", event => {
    alert("Hello, <%= current_user.first_name %>! This feature is not yet implemented. But thanks for showing your interest. It helps us to prioritize.")
    })
  })

</script>
