<div class="card-product">
    <%= link_to image_tag( "#{coach.image_url ? coach.image_url : 'https://kitt.lewagon.com/placeholder/users/krokrob'}", :alt => "rss feed", class: 'card-trip-user avatar-square'),
              coach_path(coach),
              target: "_blank" %>

    <div class="card-product-infos">
      <h2><%= link_to "#{coach.first_name} #{coach.last_name}" , coach_path(coach), target: "_blank" %></h2>
      <p>Contact: <%= coach.email %></p>
      <p>Hourly rate: <%= coach.hourly_rate %></p>
      <p>Field: <%= coach.field %></p>
    </div>
</div>
